```json
{
  "manifest_version": 3,
  "name": "Seletor CSS Interativo",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "declarativeNetRequest" // Pode ser útil no futuro para manipulação de requests
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}